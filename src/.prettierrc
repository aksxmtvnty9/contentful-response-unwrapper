{
  "bracketSpacing": true,
  "bracketSameLine": true,
  "printWidth": 100,
  "proseWrap": "always",
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "arrowParens": "always",
  "endOfLine": "auto",
  "singleAttributePerLine": true,
  "importOrder": ["<THIRD_PARTY_MODULES>", "^[./]"],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": false,
  "overrides": [
    {
      "files": "**/*.md",
      "options": {
        "printWidth": 80
      }
    }
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
